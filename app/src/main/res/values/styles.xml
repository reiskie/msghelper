<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="myDialogActivityTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">100%</item> <!-- 横屏 -->
        <item name="android:windowMinWidthMinor">100%</item> <!-- 竖屏 -->
        <item name="windowNoTitle">true</item><!-- 无标题 -->
        <!--
        <item name="android:windowBackground">@null</item>
        -->
    </style>
</resources>
